    <h2>Will you be my Valentine? üíñ</h2>

    <button class="yes" onclick="sayYes()">YES üíï</button>
    <button class="no" id="noBtn">No üôÉ</button>
  </div>

  <script>
    // Get the No button element
    const noBtn = document.getElementById("noBtn");

    // Function to move the No button randomly on hover/touch
    noBtn.addEventListener("mouseover", moveButton);
    noBtn.addEventListener("touchstart", moveButton); // For mobile

    function moveButton() {
      // Calculate maximum positions to keep button within the viewport
      const maxX = window.innerWidth - 150;
      const maxY = window.innerHeight - 100;
      
      // Generate random positions
      const x = Math.random() * maxX;
      const y = Math.random() * maxY;
      
      // Move the button to fixed position on screen
      noBtn.style.position = "fixed";
      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";
    }

    // Function to handle when Yes is clicked
    function sayYes() {
      // Update the page content to show celebration
      document.body.innerHTML = `
        <div class="box">
